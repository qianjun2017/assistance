/**app.wxss**/
page{
  background-color: #f5f5f5;
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-size: 16px;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 5rpx 0;
  box-sizing: border-box;
} 

.menus{
  width: 100%;
  display: flex;
  border-top: 1px solid #f4f4f4;
  color: #333;
  font-size: 28rpx;
  background-color: #fff;
  flex-wrap: wrap;
}

.menus .menu {
  min-width: 33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: 1px solid #f5f5f5;
  border-right: 1px solid #f5f5f5;
  padding: 10rpx;
  flex-grow: 1;
  flex-shrink: 0;
  box-sizing: border-box;
}

.menus .menu:last-child{
  border-right: none;
}

.menus .menu image{
  width: 50rpx;
  height: 50rpx;
  display: block;
  margin: 40rpx auto 20rpx auto;
}

.form {
  box-sizing: border-box;
}

.block {
  background-color: #fff;
  margin-top: 5rpx;
  padding: 0 30rpx;
}

.group {
  border: 1px solid #f5f5f5;
  margin-bottom: 8px;
}

.ops {
  display: flex;
  justify-content: flex-end;
  border-bottom: 1px solid #f5f5f5;
}

.op {
  height: 16px;
  width: 16px;
  line-height: 16px;
  margin: 4px;
}

.title {
  height: 29px;
  line-height: 29px;
  border-bottom: 2rpx solid #f5f5f5;
}

.field {
  padding: 30rpx 0px 16rpx;
  border-bottom: 2rpx solid #f5f5f5;
  display: flex;
}

.field1 {
  height: 29px;
  line-height: 29px;
}

.field2 {
  min-height: 29px;
}

.field .input {
  padding-left: 10rpx; 
  font-size: 28rpx;
  width: 100%;
}

.field .placeholder {
  color: #666;
}

.field .lable {
  width: 170rpx;
  flex-shrink: 0;
}

.field .tips {
  font-size: 12px;
}

.notice {
  font-size: 14px;
  line-height: 30px;
  min-height: 15px;
  color: #eb4340;
  text-align: left;
}

.btns {
  width: 100%;
}

.btns button:not(:first-child) {
  margin-top: 10px;
}

.green {
  color: #09bb07;
}

.grey {
  color: #b2b2b2;
}

.expired {
  color: #b2b2b2;
  text-decoration:line-through;
}

.prize-share {
  color: #eb4340;
  height: 30px;
  line-height: 30px;
  font-size: 12px;
  border-radius: 0px;
  background-color: #fff;
  padding: 0px;
}

.prize-share::after {
  border: none;
}

.prizes {
  display: flex;
  flex-wrap: wrap;
}

.prizes .prize {
  margin: 10px;
  margin-left: 0px;
  height: 32px;
  line-height: 30px;
  font-size: 12px;
  box-sizing: border-box;
  display: block;
  padding-bottom: 12px;
}

.lotteryCustomer {
  box-sizing: border-box;
  margin-bottom: 5rpx;
  background-color: #fff;
  padding: 0 13.248px;
  padding-bottom: 12px;
  display: flex;
  align-items: center;
}

.lotteryCustomer .main{
  flex-grow: 1;
}

.lotteryCustomer .more{
  width: 16px;
  flex-shrink: 0;
}

.lotteryCustomer .retailer{
  width: 100%;
  height: 46px;
  line-height: 46px;
  display: flex;
  align-items:center;
  justify-content: space-between;
}

.lotteryCustomer .more image {
  height: 16px;
  width: 16px;
}