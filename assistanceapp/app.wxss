/**app.wxss**/
page{
  background-color: #f5f5f5;
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-size: 16px;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 5rpx 0;
  box-sizing: border-box;
} 

.menus{
  width: 100%;
  display: flex;
  border-top: 1px solid #f4f4f4;
  color: #333;
  font-size: 28rpx;
  background-color: #fff;
  flex-wrap: wrap;
}

.menu {
  min-width: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: 1px solid #f4f4f4;
  border-right: 1px solid #f4f4f4;
  padding: 10rpx;
  flex-grow: 1;
  flex-shrink: 0;
}

.menu:last-child{
  border-right: none;
}

.menu image{
  width: 50rpx;
  height: 50rpx;
  display: block;
  margin: 40rpx auto 20rpx auto;
}

.btns {
  width: 100%;
}

.btns button {
  width: 100%;
  height: 50px;
  line-height: 50px;
  border-radius: 25px;
  font-family: PingFangSC-Semibold;
}

btns button::after {
  border: none;
}

.btns button:not(:first-child) {
  margin-top: 10px;
}

.btns .btn1 {
  background-image: linear-gradient(90deg,#fab3b3,#ffbcb3 73%,#ffcaba);
  color: #fff;
}

.btns .btn2 {
  border: 1px solid #ff2000;
  color: #f10000;
  background: #fff;
}