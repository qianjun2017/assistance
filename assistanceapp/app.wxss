/**app.wxss**/
page{
  background-color: #f5f5f5;
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-size: 16px;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 5rpx 0;
  box-sizing: border-box;
} 

.menus{
  width: 100%;
  display: flex;
  border-top: 1px solid #f4f4f4;
  color: #333;
  font-size: 28rpx;
  background-color: #fff;
  flex-wrap: wrap;
}

.menus .menu {
  min-width: 30%;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: 1px solid #f4f4f4;
  border-right: 1px solid #f4f4f4;
  padding: 10rpx;
  flex-grow: 1;
  flex-shrink: 0;
  box-sizing: border-box;
}

.menus .menu:last-child{
  border-right: none;
}

.menus .menu image{
  width: 50rpx;
  height: 50rpx;
  display: block;
  margin: 40rpx auto 20rpx auto;
}

.form {
  box-sizing: border-box;
}

.block {
  background-color: #fff;

}
.block:not(:first-child) {
  margin-top: 8px;
}

.title {
  border-bottom: 1px solid #f5f5f5;
  font-weight: bold;
}

.group {
  padding: 0 25px;
}

.field {
  margin: 20px 0px 0px;
  padding: 10px 0px;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  font-size: 14px;
}

.field1 {
  height: 29px;
  line-height: 29px;
}

.field2 {
  min-height: 29px;
}

.field .lable {
  width: 80px;
  flex-shrink: 0;
}

.field .tips {
  font-size: 12px;
}

.notice {
  font-size: 14px;
  line-height: 30px;
  min-height: 15px;
  color: #f23030;
  text-align: left;
}

.btns {
  width: 100%;
}

.btns button {
  width: 100%;
  height: 50px;
  line-height: 50px;
  border-radius: 25px;
  font-family: PingFangSC-Semibold;
}

btns button::after {
  border: none;
}

.btns button:not(:first-child) {
  margin-top: 10px;
}

.btns .btn1 {
  background-image: linear-gradient(90deg,#fab3b3,#ffbcb3 73%,#ffcaba);
  color: #fff;
}

.btns .btn2 {
  border: 1px solid #ff2000;
  color: #f10000;
  background: #fff;
}

.btns .btn3 {
  background-image: linear-gradient(90deg,#1d8ecad7,#1295dbe0 73%,#1295db8a);
  color: #fff;
}

.green {
  color: #67c23a;
}

.grey {
  color: #ddd;
}

.expired {
  color: #ddd;
  text-decoration:line-through;
}

.share {
  color: #f56c6c;
  height: 30px;
  line-height: 30px;
  font-size: 12px;
  border-radius: 0px;
  background-color: #fff;
}

.share::after {
  border: none;
}

.prizes {
  display: flex;
  flex-wrap: wrap;
}

.prizes .prize {
  margin: 10px;
  margin-left: 0px;
  height: 32px;
  line-height: 30px;
  font-size: 12px;
  padding: 0 10px;
  box-sizing: border-box;
  border-radius: 4px;
  display: block;
  padding-bottom: 12px;
}