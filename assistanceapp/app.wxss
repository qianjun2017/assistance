/**app.wxss**/
page{
  background-color: #f5f5f5;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 5rpx 0;
  box-sizing: border-box;
  font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-size: 16px;
} 

.menus{
  width: 100%;
  display: flex;
  border-bottom: 1px solid #f4f4f4;
  border-top: 1px solid #f4f4f4;
  color: #333;
  font-size: 28rpx;
  background-color: #fff;
}

.menu {
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-right: 1px solid #f4f4f4;
  padding: 10rpx;
}

.menu:last-child{
  border-right: none;
}

.menu image{
  width: 50rpx;
  height: 50rpx;
  display: block;
  margin: 40rpx auto 20rpx auto;
}
